{
  "name": "toy_electron_vue",
  "version": "1.0.0",
  "author": "Kevin",
  "license": "CC0-1.0",
  "description": "Hello Electron application",
  "main": "main.js",
  "scripts": {
    "vue-app:install": "cd ./app/vue-app && yarn ",
    "vue-app:build": "yarn vue-app:install && pnpm -C ./app/vue-app build",
    "vue-app:serve": "yarn vue-app:install && pnpm -C ./app/vue-app serve",
    "start": "pnpm -C ./app/vue-app build && electron  --remote-debugging-port=9222 ./main.js"
  },
  "build": {
    "productName": "toy_electron_vue",
    "appId": "com.example.app",
    "copyright": "my-electron",
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "resources/icon.ico",
      "target": [
        {
          "target": "nsis"
        }
      ]
    }

  },
  "repository": "https://github.com/electron/electron-quick-start",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],

  "devDependencies": {
    "electron": "^23.1.3"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "electron-prebuilt-compile": "^1.3.2",
    "electron-settings": "^3.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "fs-extra": "^11.1.0",
    "safe-stable-stringify": "^2.4.2",
    "winston": "^3.8.2"
  }
}
