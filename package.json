{
  "name": "toy_electron_vue",
  "version": "1.0.0",
  "author": "Kevin",
  "license": "CC0-1.0",
  "description": "Hello Electron application",
  "main": "main.js",
  "scripts": {
    "vue-app:install": "cd ./app/vue-app && yarn ",
    "vue-app:build": "yarn vue-app:install && pnpm -C ./app/vue-app build",
    "vue-app:serve": "yarn vue-app:install && pnpm -C ./app/vue-app serve",
    "electron:local:start": "electron ./main.js",
    "electron:vue-app:start": "yarn vue-app:build && cross-env Project_Entrance=vue-app  electron ./main.js",
    "electron:remote-odoo:start": "cross-env Project_Entrance=remote-odoo electron ./main.js",



    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": "https://github.com/electron/electron-quick-start",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "devDependencies": {
    "@electron-forge/cli": "^6.0.5",
    "@electron-forge/maker-deb": "^6.0.5",
    "@electron-forge/maker-rpm": "^6.0.5",
    "@electron-forge/maker-squirrel": "^6.0.5",
    "@electron-forge/maker-zip": "^6.0.5",
    "electron": "^23.1.2"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "electron-squirrel-startup": "^1.0.0",
    "vite": "^4.1.4"
  }
}
